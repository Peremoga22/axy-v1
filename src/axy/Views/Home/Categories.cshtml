@model RecieprsExpenditure

@{
    ViewBag.Title = "Categories";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <br/>
    <div class="row">
        <div class="col-sm-6">
            <h5 class="text-left">Receipts</h5>
            <table class="table table-striped table-bordered table-sm">
                <tr>
                    <th class="text-right">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-right">Sum</th>
                    <th class="text-center">Actions</th>
                </tr>
                @foreach (var item in Model.GetReceipts)
                {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-right">@item.Sum</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post">
                                <a asp-action="EditReceipts" class="btn btn-sm btn-outline-dark"
                                   asp-route-Id="@item.Id">
                                    <i style='font-size:14px' class='far'>&#xf044;</i>

                                </a>
                                <input type="hidden" name="Id" value="@item.Id" />
                                @*<button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>*@
                            </form>
                        </td>
                    </tr>
                }
            </table>
            <div class="text-left">
                <a asp-action="CreateReceipt" class="btn btn-primary">Add Category</a>
            </div>
        </div>
        <div class="col-sm-6">
            <h5 class="text-left">Expenditures</h5>
            <table class="table table-striped table-bordered table-sm">
                <tr>
                    <th class="text-right">ID</th>
                    <th class="text-center">Name</th>
                    <th class="text-right">Sum</th>
                    <th class="text-center">Actions</th>
                </tr>
                @foreach (var item in Model.GetExpenditures)
                {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-right">@item.Sum</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post">
                                <a asp-action="EditExpenditures" class="btn btn-sm btn-outline-dark"
                                   asp-route-Id="@item.Id">
                                    <i style='font-size:14px' class='far'>&#xf044;</i>

                                </a>
                                <input type="hidden" name="Id" value="@item.Id" />
                                @*<button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>*@
                            </form>
                        </td>
                    </tr>
                }
            </table>
            <div class="text-left">
                <a asp-action="CreateExpenditure" class="btn btn-primary">Add Category</a>
            </div>
        </div>
    </div>
</div>
